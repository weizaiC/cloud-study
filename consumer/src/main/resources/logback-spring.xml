<?xml version="1.0" encoding="utf-8"?>
<configuration >
    <!--<property resource="logback.properties"/>-->
    <property name="LOG_HOME" value="/data/logs/consumer/"/>
    <property name="LOG_FILE" value="consumer"/>
    <conversionRule conversionWord="ip" converterClass="com.cxw.LogIpConfig" />
    <property name="OUT_PATTERN" value="consumer|%ip|%X{trace:-100}|%d{yyyy-MM-dd' 'HH:mm:ss.sss}|%C{0}|%p|%m%n" />

    <appender name="CONSOLE-LOG" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>${OUT_PATTERN}</pattern>
        </layout>
    </appender>
    <!--获取比info级别高(包括info级别)但除error级别的日志-->
    <appender name="INFO-LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>${OUT_PATTERN}</pattern>
        </encoder>

        <!--滚动策略-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--路径-->
            <fileNamePattern>${LOG_HOME}//${LOG_FILE}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>365</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- 高级特性 异步输出 -->
    <appender name="ASYNC-INFO" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>256</queueSize>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref="INFO-LOG"/>
    </appender>

    <root level="info">
        <appender-ref ref="CONSOLE-LOG" />
        <!--<appender-ref ref="INFO-LOG" />
        <appender-ref ref="ERROR-LOG" />-->
        <!--异步输出日志-->
        <appender-ref ref="ASYNC-INFO" />
        <!--<appender-ref ref="ASYNC-ERROR" />-->
    </root>
</configuration>